<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hloek.ical2.MainActivity">

    <TextView
        android:id="@+id/displayNextEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOP!" />

    <TextView
        android:id="@+id/countDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Countdown!" />

    <TextView
        android:id="@+id/displayTimefornextevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time!" />


    <Button
        android:id="@+id/buttonNextEvent"
        android:text="Next event"
        android:onClick="onClickNextEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
